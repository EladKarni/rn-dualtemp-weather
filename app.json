{
  "expo": {
    "name": "Dualtemp Weather",
    "slug": "dualtemp-weather",
    "version": "1.2.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1C1B4D"
    },
    "assetBundlePatterns": ["**/*"],
    "extra": {
      "supportsRTL": true
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow DualTemp Weather to use your location.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "react-native-localization-settings",
        {
          "languages": ["ar", "en", "es", "fr", "he", "zh"]
        }
      ],
      ["expo-localization"],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "ek-solutions"
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "WeatherCompact",
              "label": "Weather (Compact)",
              "minWidth": "40dp",
              "minHeight": "40dp",
              "targetCellWidth": 1,
              "targetCellHeight": 1,
              "description": "Essential weather info in 1x1 size",
              "previewImage": "./assets/widget-preview/Compact.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "WeatherStandard",
              "label": "Weather (Standard)",
              "minWidth": "40dp",
              "minHeight": "110dp",
              "targetCellWidth": 1,
              "targetCellHeight": 2,
              "description": "Current weather with mini forecast in 1x2 size",
              "previewImage": "./assets/widget-preview/Standard.png",
              "updatePeriodMillis": 1800000,
              "resizeMode": "horizontal"
            },
            {
              "name": "WeatherExtended",
              "label": "Weather (Extended)",
              "minWidth": "270dp",
              "minHeight": "110dp",
              "targetCellWidth": 3,
              "targetCellHeight": 2,
              "description": "Daily forecast with vertical expansion in 3x2+ size",
              "previewImage": "./assets/widget-preview/Extended.png",
              "updatePeriodMillis": 1800000,
              "resizeMode": "vertical"
            }
          ]
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show you the weather.",
        "ExpoLocalization_supportsRTL": true,
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.ekarni.rndualtempweatherapp",
      "buildNumber": "1.2.2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1C1B4D"
      },
      "package": "com.ekarni.rndualtempweatherapp",
      "permissions": ["ACCESS_BACKGROUND_LOCATION"]
    },
    "updates": {
      "url": "https://u.expo.dev/444bda66-1ab4-4665-ba53-c2b76743a33b"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
